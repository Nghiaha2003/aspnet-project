@page "{id}" //id hay Id//
@model TeamDetailModel
@{
    ViewData["Title"] = @Html.DisplayFor(model => model.Team.Name) + " Team Detail"; //nay la gi vay?//
}
<h1>Welcome to the @Html.DisplayNameFor(model => model.Team.Name)</h1>

<div class="text-center">

    <img src="..\..\image\nfl\logo\@(Model.Team.TeamId).png">
    <div> Location: 
        @Model.Team.Location
    </div>
    <div> Name: 
        @Model.Team.Name
    </div>

    <div> 
        <h1>Winloss ratio of this team: @Model.TeamStat.WinLossRatio</h1>

    </div>


    <div class="text-center">
        <h2> @Html.DisplayNameFor(model => model.Team.Name) Stadium</h2>
    <img src="/image/nfl/stadium/@(Model.Team.TeamId).jpg">
    </div>

    <div class="text-center">
        <h2> @Html.DisplayNameFor(model => model.Team.Name) Seating</h2>
        <img src="/image/nfl/stadium/@(Model.Team.TeamId).jpg">
    </div>

    <h1>All Players Information</h1>
    <div class="d-flex bg-success text-white">
        <div class="p-2" style="flex:0 0 10%">Number</div>
        <div class="p-2" style="flex:0 0 25%">Name</div>
        <div class="p-2" style="flex:0 0 10%">Age</div>
        <div class="p-2" style="flex:0 0 10%">Position</div>
        <div class="p-2" style="flex:0 0 25%">Experience</div>
        <div class="p-2" style="flex:0 0 10%">Rank</div>
        <div class="p-2" style="flex:0 0 10%">Rating</div>
    </div>

    @foreach (Player item in Model.Team.Players) 
    {
        <div class="d-flex border-left border-right border-bottom border-primary" asp-page="/Player" asp-route-id="@item.PlayerId">
            <div class="p-2" style="flex:0 0 10%">@item.Number</div>
            <div class="p-2" style="flex:0 0 25%">@item.Name</div>
            <div class="p-2" style="flex:0 0 10%">@item.Age</div>
            <div class="p-2" style="flex:0 0 10%">@item.Position</div>
            <div class="p-2" style="flex:0 0 25%">@item.Experience</div>
            <div class="p-2" style="flex:0 0 10%">@item.Rank</div>
            <div class="p-2" style="flex:0 0 10%">@item.Rating</div>
          </div>
    }
 
    }

</div>