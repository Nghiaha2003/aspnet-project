@page
@model TeamModel
@{
}
<h1>Team Page</h1>
<div class="jumbotron p-3">
    <div class="d-flex align-items-center">
        <h1 class="display-4" flex-grow-1">
            Team List
        </h1>
        <a class="btn btn-primary btn-sm">
            Create
        </a>
       <form class="form-group">
        <label asp-for="SelectedDivision" class="control-label">
            Division:
        </label>
        <select class="p-2" asp-for="SelectedDivision" asp-items="Model.Divisions" onchange="this.form.submit();">
            <option value="">
                All
            </option>
        </select>
            <label asp-for="SearchString" class="control-label">
            Name:
        </label>
            <input class="p-2" type="text" asp-for="SearchString" />
            <input class="btn btn-primary btn-sm" type="submit" value="Search" />
        <label asp-for="SortField" class="control-label">
            Sort By:
        </label>
            <select class="p-2" asp-for="SortField" onchange="this.form.submit();">
                <option value="TeamId">
                    Code
                </option>
                <option value="Name">
                    TeamName
                </option>
            </select> 
        </form>
    </div>
</div>

<div class="d-flex bg-success text-white">
  <div class="p-2" style="flex:0 0 10%">
    TeamId
  </div>
  <div class="p-2" style="flex:0 0 10%">
    Name
  </div>
  <div class="p-2" style="flex:1 0 auto">
    Division
  </div>
  <div class="p-2" style="flex:0 0 25%">
    Options
  </div>
</div>

@foreach (var item in Model.Teams)
{
    <div class="d-flex border-left border-right border-bottom border primary">
        <div class="p-2" style="flex:0 0 10%">
            @item.TeamId
        </div>
        <div class="p-2" style="flex:0 0 10%">
            @item.Name
        </div>
        <div class="p-2" style="flex:1 0 auto">
            @item.DivisionId
        </div>
        <form method="post" class ="p-2 btn-group" style="flex:0 0 25%" role="group">
            <a class="btn btn-primary btn-sm" asp-page="./TeamDetail" asp-route-id="@item.TeamId">Team Details</a>
            <a class="btn btn-primary btn-sm" asp-page="./TeamDetail" asp-route-id="@item.TeamId">Edit</a>
            <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
            <input type="hidden" name="TeamId" value="@item.TeamId"/>
        </form>
    </div>
}

